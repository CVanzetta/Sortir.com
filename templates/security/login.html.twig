{% extends 'base.html.twig' %}

{% block title %}Se Connecter!{% endblock %}
{% block content %}
    <h1>Bienvenue sur le site Sortir.com</h1>
{% endblock %}
{% block body %}
<form method="post" action="{{ path('app_login') }}">

    {% if app.user %}
        <div class="mb-3">
            Vous Ãªtes connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connecter vous !</h1>

    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="mail" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div>
        <label for="remember_me">Se souvenir de moi</label>
        <input type="checkbox" name="remember_me" id="remember_me">
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Se Connecter
    </button>
</form>
{% endblock %}
