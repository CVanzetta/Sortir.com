{%  extends 'base.html.twig' %}

{% block body %}
    <div class="profil">
        <div class="avatarProfil">
            {% if not participant.avatar %}
            <img alt="Avatar de {{ participant.prenom }}" src="{{ asset('images/avatars/default.webp') }}">
            {% else %}
            <img alt="Avatar de {{ participant.prenom }}" src="{{ asset('images/avatars/' ~ participant.avatar) }}">
            {% endif %}
        </div>
        <div class="formProfil"><h1>Mon profil :</h1><br />
            {{ form(EditProfil) }}
        </div>
    </div>

    <a href="{{ path('profil_afficherProfil', {'id': app.user.id}) }}" title="afficher profil">{{ app.user.prenom }}</a>

{% endblock %}

{% block title %}
    Sortir.com
{% endblock %}